{
  "name": "bits-to-dead-trees",
  "author": "Robin Mehner <robin@coding-robin.de>",
  "version": "0.0.11",
  "description": "Turn HTML into PDF files",
  "repository": "github:rmehner/bits-to-dead-trees",
  "license": "Apache-2.0",
  "keywords": [
    "html",
    "pdf",
    "playwright"
  ],
  "engines": {
    "node": ">= 16"
  },
  "main": "dist/index.js",
  "scripts": {
    "check-format": "prettier --check 'src/**/*.ts'",
    "clean": "rimraf dist",
    "lint": "eslint src/*.ts",
    "format": "prettier --write src/**/*.{ts,json}",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "start:dev": "concurrently --kill-others \"npm run build -- --watch\" \"nodemon --inspect dist/index.js\" ",
    "dump-schemas": "typescript-json-schema src/types/schemas.ts PdfRequestBody --out src/schemas/pdf_request_body.json",
    "update-schemas": "npm run dump-schemas && npm run format",
    "postinstall": "npx playwright install chromium",
    "add-changeset": "changeset",
    "release": "changeset publish"
  },
  "dependencies": {
    "fastify": "^3.28.0",
    "playwright-core": "^1.21.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "typescript-json-schema": "^0.53.0"
  }
}
