{
  "name": "bits-to-dead-trees",
  "author": "Robin Mehner <robin@coding-robin.de>",
  "version": "1.0.0",
  "description": "Turn HTML into PDF files",
  "repository": "github:rmehner/bits-to-dead-trees",
  "license": "Apache-2.0",
  "keywords": [
    "html",
    "pdf",
    "playwright"
  ],
  "engines": {
    "node": ">= 16"
  },
  "main": "index.js",
  "scripts": {
    "check-format": "prettier --check **/*.{js,ts,json,md}",
    "lint": "eslint *.js",
    "format": "prettier --write **/*.{js,ts,json,md}",
    "start": "node index.js",
    "start:dev": "nodemon --inspect index.js",
    "dump-schemas": "typescript-json-schema types/schemas.ts PdfRequestBody --out schemas/pdf_request_body.json",
    "update-schemas": "npm run dump-schemas && npm run format",
    "postinstall": "npx playwright install chromium",
    "add-changeset": "changeset",
    "release": "changeset publish",
    "ts-check": "npx tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^3.29.0",
    "playwright-core": "^1.22.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "typescript-json-schema": "^0.53.1"
  }
}
